<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <h1>Login</h1>
        <form action="/auth/login" method="post">
            <div class="mb-3">
                <label for="form-email" class="form-label">Email</label>
                <input type="email" name="email" class="form-control" id="form-email">
            <% if(errors?.email) { %>
                <div class="p-3 mt-2 bg-danger text-white"><%= errors.email.msg %></div>
            <% } %>
            </div>
            <div class="mb-3">
                <label for="form-password" class="form-label">Password</label>
                <input type="password" name="password" class="form-control" id="form-password">
            <% if(errors?.password) { %>
                <div class="p-3 mt-2 bg-danger text-white"><%= errors.password.msg %></div>
            <% } %>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>
